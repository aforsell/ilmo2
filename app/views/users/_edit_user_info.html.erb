<% form_for @user do |f| %>
	<table>
		<tr>
			<td><%= f.label :username %></td>
			<td><%= f.text_field :username %></td>
		</tr>
		<tr>
			<td><%= f.label :realname, 'Real name' %></td>
			<td><%= f.text_field :realname %></td>
		</tr>
		<tr>
			<td><%= f.label :studentnum, 'Student number' %></td>
			<td><%= f.text_field :studentnum %></td>
		</tr>
		<tr>
			<td><%= f.label :password %></td>
			<td><%= f.password_field :password %></td>
		</tr>
		<tr>
			<td><%= f.label :password_confirmation %></td>
			<td><%= f.password_field :password_confirmation %></td>
		</tr>
		<tr>
			<td />
			<td style="text-align: right;"><%= submit_tag %></td>
		</tr>
	</table>
<% end %>
